#!/usr/bin/env bash

source $BIN_DIR/utils

MANAGE_FILE=$(find . -maxdepth 3 -type f -name 'manage.py' | head -1)
MANAGE_FILE=${MANAGE_FILE:-fakepath}

[ -f .heroku/compress_disabled ] && DISABLE_COMPRESS=1

bpwatch start compress

if [ ! "$DISABLE_COMPRESS" ] && [ -f "$MANAGE_FILE" ]; then
    set +e

    echo "-----> Compressing assets"
    python $MANAGE_FILE compress 2>&1 | indent

    [ $? -ne 0 ] && {
        echo " !     Error running 'manage.py compress'."
    }
    echo
fi

bpwatch stop compress
